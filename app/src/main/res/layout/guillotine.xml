<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/itemHomeOffline"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_main_play" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Cloud"
            android:textSize="20dp"
            android:id="@+id/txtHomeOffline" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemHomeOnline"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_home_on" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online music"
            android:id="@+id/txtHomeOnline"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemHotMusic"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_hot_song" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hot music"
            android:id="@+id/txtHotMusic"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemTopCharts"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_charts" />

        <TextView
            android:id="@+id/txtTopCharts"
            style="@style/TextView.GuillotineItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charts"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemTop100"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_top_song" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:text="Top 100"
            android:id="@+id/txtTop100"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemSettings"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_settings2" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:text="Settings"
            android:id="@+id/txtSettings" />
    </LinearLayout>
</LinearLayout>